<div class="jumbotron text-center">
    <h1> {{device}} wind direction sensor &nbsp; <i class="fas fa-arrows-alt-h"> </i></h1>

    <div class="container">
      <canvas id="myChart" width="500" height="200"></canvas>
    </div><br>

    {{#each metrics}}
      <div class="card card-body mb-2">
        <p><b>Date:</b> {{formatDate date 'MMMM Do YYYY'}}  &nbsp; <b>Time:</b> {{formatDate date 'HH:mm:ss'}}</p>
        <h6 align="center">{{value}} degrees</h6>
      </div>
    {{else}}
          <p>No metrics found</p>
    {{/each}}

    {{#if total}}
        <br>
        <a class="btn btn-secondary" href="/dirtotal" role="button"> &nbsp; &nbsp;  Try to see old data &nbsp; &nbsp;</a>
    {{/if}}

</div><br><br><br>

<!-- to use chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js "></script>
<script src="/socket.io/socket.io.js"></script>

<script>

  const url = window.location.pathname;
  const id = url.substring(url.lastIndexOf('/') + 1)
  const socket = io('/direView', {query:"url="+id});
  const ctx = document.getElementById('myChart').getContext('2d');

  const myChart = new Chart(ctx, {
      type: 'line',
      data: {
          labels: [],
          datasets: [{
              label: 'Wind direction in degrees',
              data: [],
              backgroundColor: 'rgba(0, 177, 106, 0.1)',
              borderColor: 'rgba(63, 195, 128, 1)',
              borderWidth: 2
          }]
      },
      options: {
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero: true
                  }
              }]
          }
      }
  });


  function pad(num) {
    return ("0"+num).slice(-2);
  }

  function getTimeFromDate(timestamp) {
    var date = new Date(timestamp);
    var hours = date.getHours();
    var minutes = date.getMinutes();
    var seconds = date.getSeconds();
    return pad(hours)+":"+pad(minutes)+":"+pad(seconds)
  }

  socket.on('directionTele', function(data){
    data.forEach( tele => {
      myChart.data.datasets[0].data.push(parseInt(tele.value))
      myChart.data.labels.push(getTimeFromDate(tele.date))
    });
    myChart.update();
  });

</script>
